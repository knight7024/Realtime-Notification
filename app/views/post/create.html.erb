<div class="container" style="margin-top: 2em;">
	<section>
		<%= form_tag(post_create_path, method: "POST") do %>
		<div class="form-button text-left mb-3">
			<%= button_tag :submit, :role => "button", :class => "btn btn-primary" do %>
				<i class="material-icons" style="font-size: 20px; vertical-align: sub">edit</i> 작성
			<% end %>
		</div>
		<div class="card">
			<div class="card-body">
				<div class="form-group">
					<%= text_field_tag :title, nil, :required => true, :class => 'form-control validate', :placeholder => '제목을 입력하세요.' %>
				</div>
				<div class="form-group">
					<%= text_area_tag :content, nil, :required => true, :class => 'form-control validate', :rows => 10, :maxlength => 500, :placeholder => '내용을 입력하세요.', :style => 'resize: none;' %>
				</div>
			</div>
		</div>
		<% end %>
	</section>
</div>